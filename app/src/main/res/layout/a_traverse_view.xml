<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="A">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:tag="B">
        <TextView
            android:id="@+id/tv_traverse_width_by_array"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="tv_traverse_width_by_array"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            android:layout_margin="4dp"
            android:tag="E">
        </TextView>
        <TextView
            android:id="@+id/tv_traverse_depth_by_recursive"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="tv_traverse_depth_by_recursive"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            android:layout_margin="4dp"
            android:tag="F"/>
        <TextView
            android:id="@+id/tv_traverse_depth_by_deque"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            android:layout_margin="4dp"
            android:text="tv_traverse_depth_by_deque"
            android:tag="G">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="4dp"
        android:background="@android:color/holo_green_light"
        android:tag="C"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="4dp"
        android:tag="D">
        <TextView
            android:id="@+id/tv_traverse_width_by_deque"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:layout_margin="4dp"
            android:text="tv_traverse_width_by_deque"
            android:tag="H">
        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:layout_margin="4dp"
            android:tag="I">
        </TextView>
    </LinearLayout>

</LinearLayout>